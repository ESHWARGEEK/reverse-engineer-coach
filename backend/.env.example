# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reverse_coach_db
POSTGRES_USER=username
POSTGRES_PASSWORD=password
POSTGRES_DB=reverse_coach_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-for-api-keys-must-be-32-bytes-base64
MASTER_ENCRYPTION_KEY=your-master-encryption-key-for-credentials-32-bytes-base64
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET_KEY=your-jwt-refresh-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
AUTH_RATE_LIMIT_REQUESTS_PER_MINUTE=5
AUTH_RATE_LIMIT_BURST=3

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_CLEANUP_INTERVAL_MINUTES=30
MAX_SESSIONS_PER_USER=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# External API Keys (Optional - users can provide their own)
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
GITHUB_TOKEN=ghp_your-github-token

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_TRACKING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# SSL/TLS Configuration (Production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt
FORCE_HTTPS=false

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M